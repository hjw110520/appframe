<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/home_page_main_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sm_50"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/bookShelfTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/HomeTab"
            android:text="@string/main_tab_bookshelf"
            />

        <TextView
            android:id="@+id/bookStoreTab"
            style="@style/HomeTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/main_tab_bookstore" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/home_page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_page_main_tab">
    </RelativeLayout>
</RelativeLayout>
